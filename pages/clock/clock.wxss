/* pages/clock/clock.wxss */
.bg {
  background-color: #000000;
  width: 100vw;
  height: 100vh;
}
.clock {
  transform: rotate(90deg) translate(20vh);
  display: flex;
  align-items: center;
}
.calendar {
  transform: rotate(90deg) translate(23vh, -65vw);
  width: 30vh;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #ffffff;
}
.himg, .mimg {
  width: 32vh;
  height: 35vh;
}
.mtosup, .mtosdown {
  padding: 2vh 1vh;
  display: flex;
  width: 3vh;
  height: 5vh;
}
.hour, .min {
  display: flex;
  flex-direction: row;
}
.htexts, .mtexts {
  display: flex;
  font-size: 22vh;
  z-index: 3;
  width: 9.603vh;
  justify-content:center;
  margin: 2vh 11vh 0 -20.5vh;
}
.trans {
  transform: rotate(90deg) translate(60vh, 40vw);
  display: flex;
  align-items: center;
  color: #ffffff;
  font-size: 2.2vh;
}
.trans image{
  width: 20vh;
  height: 10vw;
}
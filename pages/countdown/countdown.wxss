/* pages/countdown/countdown.wxss */
.bg {
  background-color: #000000;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.hms-bg {
  padding-bottom: 20vw;
  display: flex;
  align-items: center;
  position: absolute;
  transform: rotate(90deg) translate(25vh, -10vw);
}
.htom {
  margin-top: 9vh;
}
.hlump, .mlump, .slump {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.topbg {
  width: 28vh;
  height: 30vh;
}
.axles {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: -33.5vh;
}
.axleup, .axledown {
  display: flex;
  margin: 0 -1vh;
  z-index: 3;
  width: 4vh;
  height: 3vh;
}
.line {
  display: block;
  z-index: 3;
  width: 25vh;
  height: 1vw;
}
.mtosup, .mtosdown {
  padding: 2vh 1vh;
  display: flex;
  width: 3vh;
  height: 5vh;
}
.add, .reduce{
  margin: 1vh 0;
  width: 8vh;
  height: 4vh;
}
.htext, .mtext, .stext {
  display: flex;
  font-size: 18vh;
  z-index: 3;
  justify-content:center;
}
.btns {
  transform: rotate(90deg) translate(45vh, 17vh);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.transform {
  transform: rotate(90deg) translate(73vh ,40vw);
  display: flex;
  align-items: center;
  color: #ffffff;
  font-size: 2.2vh;
}
.transform image {
  width: 20vh;
  height: 10vw;
}

.btns button {
  font-size: 2.2vh;
  width: 20vh;
  height: 5vh;
  border-radius: 50px;
  background: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#a7a7a7));
}
.waring, .finished, .areysure{
  padding: 2vh;
  transform: rotate(90deg) translate(33vh);
  font-size: 3vh;
  color: #171717;
  background-color: #fff;
}
.warct, .finct .aresure{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-items: center;
  justify-content: center;
}
.warct .context,.finct .context, .aresure .context {
  white-space: nowrap;
}
.cancon {
  display: flex;
  justify-content: space-around;
}

.divLine{
 background: #BBBFCB;
 width: 100%;
 height: 3rpx;
}
.divLinehid{
 background: #ffffff;
 width: 100%;
 height: 1rpx;
}
